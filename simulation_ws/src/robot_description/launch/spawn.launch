<launch>
  <!-- Load robot description from xacro -->
  <param name="robot_description" command="$(find xacro)/xacro '$(find robot_description)/urdf/robot.xacro'" />

  <!-- Spawn the robot into Gazebo -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-param robot_description -urdf -model varad_bot" />

  <!-- Launch Gazebo (optional, if not already running) -->
  <!--
  <include file="$(find gazebo_ros)/launch/empty_world.launch" />
  -->

  <!-- Run your custom obstacle avoidance node -->
  <node name="smart_navigator" pkg="robot_description" type="smart_navigator.py" output="screen" />

</launch>
